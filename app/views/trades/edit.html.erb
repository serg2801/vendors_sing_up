<script>
    $(document).on("page:change", function () {
        var mas_title_categories = [
            <% @trade.categories.each do |category| %>
            '<%= category.title %>',
            <% end %>
        ];
        $.each(mas_title_categories, function (index, value) {
            var check_box = $('.company_check_box .checkbox-custom').find('label:contains("' + value.toUpperCase() + '")');
            check_box.parent(".checkbox-custom").find('input').prop('checked', true);
        });

        var mas_title_channels = [
            <% @trade.channels.each do |channel| %>
            '<%= channel.title %>',
            <% end %>
        ];
        $.each(mas_title_channels, function (index, value) {
            var check_box = $('.company_check_box .checkbox-custom').find('label:contains("' + value.toUpperCase() + '")');
            check_box.parent(".checkbox-custom").find('input').prop('checked', true);
        });

        var mas_title_options = [
            <% @trade.options.each do |option| %>
            '<%= option.title %>',
            <% end %>
        ];
        $.each(mas_title_options, function (index, value) {
            var check_box = $('.company_check_box .checkbox-custom').find('label:contains("' + value.toUpperCase() + '")');
            check_box.parent(".checkbox-custom").find('input').prop('checked', true);
        });
    });

</script>

<div class="row">
  <div class="row">
    <div class="col-xs-12 m-t-lg m-b-lg form_container">
      <div class="b-t-md">
        <div class="col-xs-10 col-xs-offset-1 bold-title">
          <h4 class="text-center">Tandem Arbor - Edit Vendor Application</h4>
        </div>
      </div>
    </div>
  </div>
  <%= render "form" %>
</div>